#include<iostream>
#include<string>

using namespace std;
#include<vector>
class Per
{
public:
	Per(){name="no";phoneNumber1="no";phoneNumber2="no";ad="no";email="no";}
	Per(string Name,string PhoneNumber1,string PhoneNumber2,string Ad,string Email){name=Name;phoneNumber1=PhoneNumber1;phoneNumber2=PhoneNumber2;ad=Ad;email=Email;}
	~Per(){}
	/* 对新的联系人设置*/
	void set()
	{
		cout<<"enter the name,phone number1,phonenumber2 ,address and email"<<endl;
		cin>>name>>phoneNumber1>>phoneNumber2>>ad>>email;

	}

	/*输出联系人的信息*/
	void show()
	{
		cout<<name<<" "<<phoneNumber1<<" "<<phoneNumber2<<" "<<ad<<" "<<email<<endl;
	}

    bool lookup(string Name)
    {
        if(Name==name)
            return true;
        else
            return false;
    }
private:
	string name;
	string phoneNumber1;
	string phoneNumber2;
	string ad;
	string email;
};

/**************增加新的联系人*****************/

void add(Per *per,int n)
{
    Per i;
    i.set();
    per[n]=i;
    cout<<"added"<<endl;
}
/**************删除联系人*********************/
void del(Per *per,int n)
{
    string Name;
    cout<<"please enter the name:"<<endl;
    cin>>Name;
    for(int i=0;i<n;i++)
    {
        if(per[i].lookup(Name)==true)
        {
            for(;i<n-1;i++)
                per[i]=per[i+1];
        }
    }
    cout<<"deleted!"<<endl;
}
/**************修改联系人信息*****************/
void mod(Per *per,int n)
{
    string Name;
    cout<<"enter the name:"<<endl;
    cin>>Name;
    for(int i=0;i<n;i++)
    {
        if(per[i].lookup(Name)==true)
        {
            per[i].show();
            per[i].set();
        }
    }

}
/**************查找联系人*********************/
void srch(Per *per,int n)
{
    string Name;
    cout<<"enter the name:"<<endl;
    cin>>Name;
    for(int i=0;i<n;i++)
    {
        if(per[i].lookup(Name)==true)
            {
                cout<<"find him:"<<endl;
                per[i].show();

            }
    }
}
/*************显示全部联系人*******************/
void showall(Per *per,int n)
{
    for(int i=0;i<n;i++)
        per[i].show();
}

/*************主函数***************************/
int main()
{
    int i=0;//i记录数组中储存的成员数
    Per per[100];
    /*for(int n=0;n<2;n++)
        add(per,i++);
    for(int j=0;j<2;j++)               //测试对象是否存入数组//
    {
        per[j].show();
    }*/
    char code;
    do
    {
            cout<<"/********************************************************/"<<endl;
            cout<<"please enter the operation code"<<endl;
            cout<<"1.add"<<endl;
            cout<<"2.delete"<<endl;
            cout<<"3.search"<<endl;
            cout<<"4.show all"<<endl;
            cout<<"5.modify"<<endl;
            cout<<"0.end"<<endl;
            cout<<"/********************************************************/"<<endl;
            cin>>code;
        switch(code)
            {
            case '1':   add(per,i);++i;
                            break;
            case '2':   del(per,i);--i;showall(per,i);
                            break;
            case '3':   srch(per,i);
                            break;
            case '4':   showall(per,i);
                            break;
            case '5':   mod(per,i);
                            break;
            case '0':   return 0;
            default:    cout<<"wrong code,enter again"<<endl;
            }


    }while(1);
	return 0;
}
